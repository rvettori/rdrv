<%= simple_form_for(@contact) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :born_at, as: :date, start_year: Date.today.year- 90,
                              end_year: Date.today.year - 16,
                              order: [:day, :month, :year]%>

    <%= f.association :zipcode %>
    <%= f.input :nationality %>
    <%= f.association :occupation %>
    <%= f.input :about %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>    
    &nbsp;<%= content_for(:back) %>
  </div>
<% end %>
