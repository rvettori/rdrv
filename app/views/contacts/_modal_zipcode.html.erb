<!-- modal -->
  <div class="modal fade zipcode-modal" tabindex="-1" role="dialog" aria-labelledby="gridSystemModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="gridSystemModalLabel">ViaCep</h4>
        </div>
        <div class="modal-body">

          <div class="form-inline">
            <div class="form-group">
              <input type="text" v-model='zipcode' v-digitsonly maxlength="8" class="form-control" placeholder="ex: 85601530">        
            </div>
            <button type="submit" v-on:click="zipcode_search" class="btn btn-default">Search</button>
          </div>            
          <p class="text-danger" v-if="zipcode_error">Invalid zipcode!</p>
          <hr>
          <dl class="dl-horizontal">
            <dt>code:</dt>
            <dd>{{viacep.cep}}</dd>
            <dt>Street:</dt>
            <dd>{{viacep.logradouro}}</dd>
            <dt>Neighbordhood:</dt>
            <dd>{{viacep.bairro}}</dd>
            <dt>City:</dt>
            <dd>{{viacep.localidade}}</dd>
            <dt>State:</dt>
            <dd>{{viacep.uf}}</dd>
          </dl>

          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="button" v-on:click="zipcode_add" v-if="!!viacep.cep" class="btn btn-primary" data-dismiss="modal">Add</button>
          </div>
        </div><!-- /.modal-content -->
      </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
